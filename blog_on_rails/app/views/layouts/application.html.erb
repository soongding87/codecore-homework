<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-expand-md navbar-expand-sm navbar-white bg-white">
  <a class="navbar-brand" href="<%= posts_path %>">Blog on Rails</a>
  <div class="collapse navbar-collapse">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item active">
        <a class="nav-link" href="<%= home_path %>">Home</a>
      </li>
      <li class="nav-item">
      </li>
    </ul>
    <% if current_user.present? %>
    <a class="nav-link" href="<%= new_post_path %>">New Post</a>

      <span>Hi, <%= current_user.name%>!</span>
      <%= link_to 'Edit', edit_user_path(current_user.id) %>
      |
      <%= link_to 'Sign Out', session_path, method: :delete %>
    <% else %>
      <%= link_to 'Sign In', new_session_path %>
      |
      <%= link_to 'Sign Up', new_user_path %>
    <% end %>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
