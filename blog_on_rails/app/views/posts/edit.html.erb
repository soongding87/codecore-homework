<div class="container">
<%= form_for @post do |f| %>
<%= @post.errors.full_messages.join(', ') %>
<div class="row pb-2">
<%= f.label :title %>
<%= f.text_field :title, class: "form-control" %>
</div>
<div class="row pb-3">
<%= f.label :description %>
<%= f.text_area :body, class: "form-control", rows: 4 %>
</div>
<div class="row">
<%= f.submit "Update Post", class: "btn btn-outline-primary" %>
</div>
<% end %>
</div>
